{
  "description": "Branch protection rules requiring Lignin quality checks to pass",
  "rules": {
    "main": {
      "required_status_checks": {
        "strict": true,
        "contexts": [
          "CI Gate",
          "Lignin Tests",
          "Test Cambium",
          "Test Phloem", 
          "Test Crown",
          "Test Xylem",
          "Test Suberin",
          "Security Scan",
          "Quality Gates",
          "Coverage Standards (Lignin)"
        ]
      },
      "enforce_admins": true,
      "required_pull_request_reviews": {
        "dismiss_stale_reviews": true,
        "require_code_owner_reviews": false,
        "required_approving_review_count": 1
      },
      "restrictions": null,
      "allow_force_pushes": false,
      "allow_deletions": false,
      "required_linear_history": false,
      "required_conversation_resolution": true
    }
  },
  "notes": [
    "All CI checks must pass before merge",
    "Lignin tests are BLOCKING - no exceptions",
    "Quality gates enforce test coverage",
    "At least one approval required for PRs",
    "Stale reviews are dismissed on new pushes"
  ]
}
